<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UWOsh_InteractiveMap.DetailPage"
             Title="DetailPage">
    <VerticalStackLayout>
        <!-- Plant Name in format "general name (species name)"-->
        <Label 
            x:Name="DisplayTitle"
            VerticalOptions="Start" 
            HorizontalOptions="Center"
            Style="{StaticResource HeadingStyle}"/>

        <Label
            Text="About:"
            HorizontalOptions="Start"
            Style="{StaticResource SubHeadingStyle}"/>
        
        <Label
            x:Name="DisplayDescription"
            HorizontalOptions="Start"
            Style="{StaticResource PlainTextStyle}"/>

        <Image 
            x:Name="ImagePath"
            MaximumHeightRequest="400"
            Margin="10"/>
    </VerticalStackLayout>
</ContentPage>